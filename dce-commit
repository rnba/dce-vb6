#!/usr/bin/execlineb -Ws0

multisubstitute {
  importas -i mode mode
  importas -i file file
  importas -i d d
  importas -i fd fd
  importas -i sd sd
  importas -i t t
  importas -i n n
}
if {
  redirfd -w 1 .git/msg
  printf "%s: drop %s %s (%s)\n" $file $t $n $mode
}
if { git commit -aqF .git/msg $@ }
if { touch ${d}/progress }
rm -f
  ${fd}/${t}.${n}
  ${sd}/${t}.${n}
