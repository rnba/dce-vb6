#!/usr/bin/execlineb -W

multisubstitute {
  importas -i mode mode
  importas -i dir dir
  importas -i file file
  importas -i t t
  importas -i n n
}
foreground { echo processing $file $t $n }
foreground { dce-delete-def }
ifelse -n { git grep -iqrw $n $dir }
{
  foreground { touch go_on }
  dce-commit -F
}
exec dce-process-${mode}
