#!/usr/bin/execlineb -Wp
# vim: et ts=2 sts=2 et fdm=marker cms=\ #\ %s

multisubstitute {
  importas "#" "#"
  importas 0 0
  importas PATH PATH
}
backtick -E P { realpath $0 }
backtick -E D { dirname $P }
backtick -E F { basename $P }

ifelse { test $# -lt 1 }
{
  fdmove -c 2 1
  dce-print -f { "usage: %s FILE\\n" $F }
  exit 1
}

elgetpositionals
define file $1
export file $file
backtick dir { dirname $file }

define d .git/dce-vb6/${file}
multisubstitute {
  define sd ${d}/skip
  define fd ${d}/fail
}
export d $d
export fd $fd
export sd $sd

if { mkdir -p $fd $sd }

export PATH ${D}:${PATH}
exec
dce-pre-checks $F
dce-delete-vcs-comment $file
dce-prune automatic
dce-prune interactive
exit
